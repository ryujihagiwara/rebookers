<h2>Books</h2>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
      	<%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>

</table>

<h3>New book</h3>

<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>